# Copy this file to `.env` and fill in the required secrets before running the app.

base_url=https://147ai.com

# Runtime
ENV=development
LLM_API_BASE_URL=${base_url}
LLM_API_KEY=your-llm-api-key
LLM_MODEL=openai/gpt-4o-mini

# Image generation API
IMAGE_GEN_API_BASE_URL=${base_url}
IMAGE_GEN_API_KEY=your-image-gen-api-key

# Image edit API
IMAGE_EDIT_API_BASE_URL=${base_url}
IMAGE_EDIT_API_KEY=your-image-edit-api-key

# Video generation API
VIDEO_GEN_API_BASE_URL=${base_url}
VIDEO_GEN_API_KEY=your-video-gen-api-key


# Image upload API (optional)
UPLOAD_URL=https://api.bltcy.ai/v1/files
UPLOAD_APIKEY=your-upload-api-key

# Supabase (self-hosted)
# Must match Supabase `JWT_SECRET`
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# Database (SQLite default; replace with PostgreSQL for production)
DATABASE_URL=sqlite+aiosqlite:///./data.db
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_ECHO=false

# Auth / JWT
JWT_SECRET_KEY=your-jwt-secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_SESSION_EXPIRE_DAYS=7

# Cookies
COOKIE_SECURE=false
COOKIE_SAMESITE=lax

# Static files cache (leave empty to use environment defaults)
STATIC_CACHE_CONTROL=

# Storage encryption
STORAGE_MASTER_KEY=your-storage-master-key
DEFAULT_STORAGE_QUOTA_BYTES=1073741824

# Backups
BACKUP_ENABLED=false
BACKUP_DIR=backups
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7

# Request logging limits
REQUEST_LOG_MAX_BODY_BYTES=50000

# Polling / retries
POLLING_INTERVAL=5
POLLING_MAX_ATTEMPTS=360
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=2.0
MAX_CONCURRENT_TASKS=10
REQUEST_TIMEOUT=60
